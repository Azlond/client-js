{
  "name": "@brokerize/client",
  "version": "0.0.1-alpha-1",
  "description": "Client for the brokerize.com API",
  "main": "dist/index.js",
  "types": "dist/client.d.ts",
  "scripts": {
    "build": "npx tsc && npm run api-extractor",
    "download-spec": "curl https://api-preview.brokerize.com/openapi.json > openapi_dl.json &&  node -e 'console.log(JSON.stringify(JSON.parse(require(\"fs\").readFileSync(\"openapi_dl.json\").toString()),null,4))' > openapi.json && rm openapi_dl.json", 
    "generate": "npx @openapitools/openapi-generator-cli generate -i openapi.json -g typescript-fetch --additional-properties=typescriptThreePlus=true -o ./src/swagger",
    "download-and-generate": "npm run download-spec && npm run generate",
    "api-extractor": "npx api-extractor run --local"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brokerize/client-js.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/brokerize/client-js/issues"
  },
  "homepage": "https://github.com/brokerize/client-js#readme",
  "devDependencies": {
    "@microsoft/api-extractor": "7.23.1",
    "typescript": "4.6.4"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
